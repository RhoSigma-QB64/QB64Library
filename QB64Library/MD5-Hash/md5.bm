'--- docs\GetFileMD5.html
'---------------------------------------------------------------------
FUNCTION GetFileMD5$ (FileSpec$)
GetFileMD5$ = FileMD5$(FileSpec$ + CHR$(0))
END FUNCTION

'--- docs\GetStringMD5.html
'---------------------------------------------------------------------
FUNCTION GetStringMD5$ (MsgData$)
GetStringMD5$ = StringMD5$(MsgData$ + CHR$(0), LEN(MsgData$))
END FUNCTION

